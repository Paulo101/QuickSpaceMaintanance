@{
	Layout = "~/Views/Home/_Layout.cshtml";
	ViewBag.Title = "Access Denied";
}
        <div class="content-wrapper">
          <div class="content">						<div class="error-wrapper rounded border bg-white px-5">
							<div class="row justify-content-center">
								<div class="col-xl-4">
									<h1 class="text-danger bold error-title">403</h1>
								    <h3 class="text-danger bold error-title">Forbidden</h3>
									<p class="pt-4 pb-5 error-subtitle">Hey there! Access denied by URL authorization policy on the Web server.</p>
									<a asp-action="Login" class="btn btn-primary btn-pill">Back to Login</a>
								</div>
								<div class="col-xl-6 pt-5 pt-xl-0 text-center">
									<img src="~/assets/img/lightenning.png" class="img-responsive" alt="Error Page Image">
								</div>
							</div>
						</div>
</div>
</div>
