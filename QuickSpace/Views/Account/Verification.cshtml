@model QuickSpace.Models.ViewModels.VerificationViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Verify Account";
     Layout = "~/Views/Home/_Layout.cshtml";
}
  @if(ViewBag.Error != null)
                                                    {
                                                       	<div class="alert alert-danger" role="alert">
                                                               	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			    	                                                <span aria-hidden="True">&times;</span>
			  	                                                </button>
	                                                       @ViewBag.Error
	                                                    </div>
                                         
                                                    }
                                                    @if(ViewBag.Success != null)
                                                    {
                                                        <div class="alert alert-success" role="alert">
                                                               	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			    	                                                <span aria-hidden="True">&times;</span>
			  	                                                </button>
	                                                       @ViewBag.Success
	                                                    </div>
                                                    }
<section id="sign-in" class="bglight position-relative padding">
    <div class="container">
        <div class="row">
           
            <div class="col-md-12 text-center wow fadeIn" data-wow-delay="300ms">
                <h2 class="heading bottom30 darkcolor font-light2"><span class="font-normal">Account</span> Verification
                    <span class="divider-center"></span>
                </h2>
                <div class="col-md-8 offset-md-2 heading_space">
                    <p>Provide the 6 digit code sent to phone number</p>
                </div>
            </div>
            <div class="col-lg-6 pr-lg-0 col-md-12 d-none d-lg-flex">
                <div class=" image login-image h-100">
                    <img src="~/images/pencil.png" alt="" class="w-100 h-100">
                </div>
            </div>
            <div class="col-lg-6 pl-lg-0 col-md-12 whitebox">
                <div class="widget logincontainer">
                    <h3 class="darkcolor bottom30 text-center text-lg-left">Verification</h3>
                    <div class="col-md-8 offset-md-2 heading_space">
                    <p>Didn't recieve the Code? Request it from your Admin.</p>
                </div>
                       <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form asp-action="Verification" method="Post" class="getin_form border-form" id="verify">
                       
                        <div class="row">
                            
                            <div class="col-md-12 col-sm-12">
                                <div class="form-group bottom35">
                                    <label for="code" class="d-none"></label>
                                    <input asp-for="VerificationCode" class="form-control" type="text" placeholder="6 Digit Code:" required id="code">
                                </div>
                            </div>
      
                            <div class="col-sm-12">
                                <button type="submit" class="button gradient-btn">Verify</button>
                                <p class="top30 mb-0"> Already have an account? &nbsp;<a asp-action="Login" class="defaultcolor">Sign In Now</a> </p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- sign-in ends -->